<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matthewfung.eventplanner">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".corporateActivity"
            android:label="@string/title_activity_corporate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PersonalActivity" />
        <activity android:name=".AddOnsActivity" />
        <activity android:name=".CustomActivity" />
        <activity android:name=".DetailActivity" />
        <activity android:name=".PaymentActivity" />
        <activity
            android:name=".FinalActivity"
            android:label="@string/title_activity_final"
            android:theme="@style/AppTheme" />
        <activity android:name=".LocationActivity"></activity>
    </application>

</manifest>
