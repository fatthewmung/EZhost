<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthewfung.eventplanner.PersonalActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a date for your event"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available venues for: "
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_toLeftOf="@+id/price1"
        android:layout_toStartOf="@+id/price1" />

    <ImageView
        android:id="@+id/test_image"
        android:src="@drawable/beach_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="84dp"
        android:paddingRight="170dp"
        android:layout_above="@+id/price2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/test_image2"
        android:src="@drawable/patio_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingRight="170dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue 1"
        android:id="@+id/venue1"
        android:layout_marginTop="39dp"
        android:layout_gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/price1"
        android:layout_alignStart="@+id/price1"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $700"
        android:id="@+id/price1"
        android:layout_below="@+id/desc1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:textSize="18sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:id="@+id/button1"
        android:onClick="moreInfo"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue 2"
        android:id="@+id/venue2"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_alignBottom="@+id/test_image"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $1000"
        android:id="@+id/price2"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_below="@+id/desc2"
        android:layout_alignLeft="@+id/desc2"
        android:layout_alignStart="@+id/desc2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Info"
        android:id="@+id/button2"
        android:onClick="moreInfo"
        android:layout_alignRight="@+id/price2"
        android:layout_alignEnd="@+id/price2"
        android:layout_below="@+id/price2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/desc1"
        android:text="Beach event space, great for kids."
        android:layout_below="@+id/venue1"
        android:layout_alignRight="@+id/test_image"
        android:layout_alignEnd="@+id/test_image"
        android:layout_marginTop="26dp"
        android:layout_alignLeft="@+id/price1"
        android:layout_alignStart="@+id/price1"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Patio space, perfect for BBQ."
        android:id="@+id/desc2"
        android:layout_below="@+id/venue2"
        android:layout_alignRight="@+id/test_image2"
        android:layout_alignEnd="@+id/test_image2"
        android:layout_alignLeft="@+id/venue2"
        android:layout_alignStart="@+id/venue2"
        android:textSize="18sp" />

</RelativeLayout>
