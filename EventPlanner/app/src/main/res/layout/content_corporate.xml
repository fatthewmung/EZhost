<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.matthewfung.eventplanner.corporateActivity"
    android:id="@+id/content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available venues near MaRS Discovery District"
        android:id="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/test_image"
        android:src="@drawable/eventspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="141dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="170dp" />

    <ImageView
        android:id="@+id/test_image2"
        android:src="@drawable/eventspace2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingRight="170dp"
        android:layout_below="@+id/price1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEC Centre"
        android:id="@+id/venue1"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/venue2"
        android:layout_alignStart="@+id/venue2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large indoor space"
        android:id="@+id/price1"
        android:textSize="15sp"
        android:layout_below="@+id/desc1"
        android:layout_alignLeft="@+id/venue2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Gala"
        android:id="@+id/venue2"
        android:textSize="20sp"
        android:layout_above="@+id/price2"
        android:layout_alignLeft="@+id/price2"
        android:layout_alignStart="@+id/price2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $1000"
        android:id="@+id/price2"
        android:textSize="15sp"
        android:layout_above="@+id/desc2"
        android:layout_alignLeft="@+id/desc2"
        android:layout_alignStart="@+id/desc2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/desc1"
        android:text="Price:$700"
        android:textSize="15sp"
        android:layout_below="@+id/venue1"
        android:layout_alignLeft="@+id/venue2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Banquet space"
        android:id="@+id/desc2"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/test_image"
        android:layout_alignRight="@+id/test_image"
        android:layout_alignEnd="@+id/test_image"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More info"
        android:id="@+id/button9"
        android:onClick="detail"
        android:layout_below="@+id/price1"
        android:layout_alignLeft="@+id/venue2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More info"
        android:id="@+id/button10"
        android:layout_below="@+id/desc2"
        android:layout_alignLeft="@+id/desc2"
        android:layout_alignStart="@+id/desc2"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9"
        android:onClick="detail"/>

</RelativeLayout>
